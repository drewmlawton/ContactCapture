{
    "manifest_version": 3,
    "name": "ContactCapture",
    "version": "1.0",
    "permissions": ["activeTab", "scripting", "storage"],
    "action": {
      "default_popup": "popup.html",
      "default_title": "Extract Emails"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "icons": {
      "1024": "logo.png"
  }
}
  